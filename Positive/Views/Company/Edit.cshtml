            @Html.LabelFor(model => model.FirmName, @Positive.Model.Languages.CRM.FirmName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FirmName, new { htmlAttributes = new { @class = "form-control    k-textbox" } })
                @Html.ValidationMessageFor(model => model.FirmName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TaxNumber,  @Positive.Model.Languages.CRM.TaxNumber, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TaxNumber, new { htmlAttributes = new { @class = "form-control    k-textbox" } })
                @Html.ValidationMessageFor(model => model.TaxNumber, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TaxOffice,  @Positive.Model.Languages.CRM.TaxOffice, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TaxOffice, new { htmlAttributes = new { @class = "form-control    k-textbox" } })
                @Html.ValidationMessageFor(model => model.TaxOffice, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MersisNo,  @Positive.Model.Languages.CRM.MersisNo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MersisNo, new { htmlAttributes = new { @class = "form-control    k-textbox" } })
                @Html.ValidationMessageFor(model => model.MersisNo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Note,  @Positive.Model.Languages.CRM.Note, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Note, new { htmlAttributes = new { @class = "form-control    k-textbox" } })
                @Html.ValidationMessageFor(model => model.Note, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
}


@section pageScripts{
    <script type="text/javascript">

        function setEditFormParam(editFormParam) {
            if (!window.location.origin) {
                window.location.origin = window.location.protocol + "//" + window.location.hostname + (window.location.port ? ':' + window.location.port : '');
            }
            editFormParam.saveUrl = window.location.origin + '/Company/Edit/';
            editFormParam.deleteUrl = window.location.origin + '/Company/Delete/';
            editFormParam.titleField = 'FirmName'
        }

        $(document).ready(function () {
            pageIsReady();
        });

    </script>
}
