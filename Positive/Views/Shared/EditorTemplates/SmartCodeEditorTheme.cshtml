@(Html.Kendo().AutoComplete()
            .Name("SmartCodeEditor")
            .DataTextField("SmartCode")
            .Filter("contains")
            .MinLength(3)
            .HtmlAttributes(new { style = "width:250px" })
            .DataSource(source =>
            {
                source.Read(read =>
                {
                    read.Action("ListForSearch", "Stock");
                    read.Data("SmartCodeEditorFilter");
                    
                })
                .ServerFiltering(false);
            })
)
